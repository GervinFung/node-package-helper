{
    "name": "node-package-helper",
    "description": "My helper to ensure TypeScript transpiled files/folders are valid according to my preference",
    "version": "0.1.0",
    "license": "MIT",
    "type": "module",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "installation": "pnpm i --frozen-lockfile",
        "postinstall": "pnpm build",
        "lint": "eslint src/ test/ script/ -f='stylish' --color",
        "format": "prettier --ignore-path .gitignore --write src/ test/ script/ ",
        "format-check": "prettier --ignore-path .gitignore --check src/ test/ script/ ",
        "build": "shx rm -rf build && tsc -p tsconfig.build.json && pnpm postbuild",
        "postbuild": "ts-add-js-extension add --dir=build",
        "pretest": "cd test/dummy && rm cjs/package.json mjs/package.json",
        "test": "pnpm pretest && vitest && pnpm posttest",
        "posttest": "pnpm format"
    },
    "dependencies": {
        "shx": "^0.3.4",
        "ts-add-js-extension": "^1.3.4",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@poolofdeath20/eslint-config": "^0.1.0",
        "@types/node": "^20.1.7",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.40.0",
        "prettier": "^2.8.8",
        "vitest": "^0.31.0"
    }
}
